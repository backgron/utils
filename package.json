{
    "name": "@pigjs/utils",
    "version": "1.0.0",
    "description": "前端公共方法库",
    "keywords": [
        "utils",
        "hooks"
    ],
    "homepage": "https://github.com/pigjs/utils#readme",
    "bugs": {
        "url": "https://github.com/pigjs/utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pigjs/utils"
    },
    "license": "ISC",
    "author": "MrYeZiqing",
    "main": "lib/index.js",
    "module": "es/index.js",
    "typings": "lib/index.d.ts",
    "files": [
        "lib",
        "es",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "father-build",
        "commit-msg": "pig-fabric --hooks=commit-msg",
        "dev": "father-build -w",
        "init": "rimraf node_modules && npm run clean && npm run bootstrap",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx --quiet && stylelint 'src/**/*.{less,css}'",
        "lint-fix": "eslint src --ext .js,.jsx,.ts,.tsx --quiet --fix && stylelint 'src/**/*.{less,css}' --fix",
        "pig-fabric:install": "pig-fabric install",
        "pre-commit": "pig-fabric --hooks=pre-commit && lint-staged",
        "pre-merge-commit": "pig-fabric --hooks=pre-merge-commit",
        "prepare": "npx husky install",
        "pub": "npm run build && lerna publish --no-verify-access",
        "pub:no-build": "lerna publish --no-verify-access",
        "test": "umi-test",
        "test:coverage": "umi-test --coverage",
        "test:u": "umi-test -u"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,less,css,md}": "pretty-quick --staged",
        "*.{js,jsx,ts,tsx}": "eslint --fix --quiet",
        "*.{css,less}": "stylelint"
    },
    "dependencies": {
        "@babel/runtime": "^7.20.13"
    },
    "devDependencies": {
        "@pigjs/fabric": "^1.0.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/react": "^18.0.27",
        "@umijs/test": "^3.5.34",
        "eslint": "7.32.0",
        "father-build": "^1.22.5",
        "husky": "8.0.2",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "pretty-quick": "3.1.3",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "rimraf": "^4.1.2",
        "stylelint": "13.13.1"
    }
}
