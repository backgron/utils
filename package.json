{
    "name": "@pigjs/utils",
    "version": "1.0.0",
    "description": "前端公共方法库",
    "keywords": [
        "utils",
        "hooks"
    ],
    "homepage": "https://github.com/pigjs/utils#readme",
    "bugs": {
        "url": "https://github.com/pigjs/utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pigjs/utils"
    },
    "license": "ISC",
    "author": "MrYeZiqing",
    "main": "lib/index.js",
    "module": "es/index.js",
    "typings": "lib/index.d.ts",
    "files": [
        "lib",
        "es",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "commit-msg": "pig-fabric --hooks=commit-msg",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx --quiet && stylelint 'src/**/*.{less,css}'",
        "lint-fix": "eslint src --ext .js,.jsx,.ts,.tsx --quiet --fix && stylelint 'src/**/*.{less,css}' --fix",
        "pig-fabric:install": "pig-fabric install",
        "pre-commit": "pig-fabric --hooks=pre-commit && lint-staged",
        "pre-merge-commit": "pig-fabric --hooks=pre-merge-commit",
        "prepare": "npx husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,less,css,md}": "pretty-quick --staged",
        "*.{js,jsx,ts,tsx}": "eslint --fix --quiet",
        "*.{css,less}": "stylelint"
    },
    "devDependencies": {
        "@pigjs/fabric": "^1.0.0",
        "eslint": "7.32.0",
        "husky": "8.0.2",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "pretty-quick": "3.1.3",
        "stylelint": "13.13.1"
    }
}
